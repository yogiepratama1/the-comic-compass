---
const siteName = "The Comic Compass";

const personas = [
  {
    id: "movie-fan",
    title: "The Movie Fan",
    desc: "Suka film/series, bingung mau mulai baca komik dari mana.",
    icon: "üé¨",
    color: "#E63946",
    link: "/path/movie-to-comics"
  },
  {
    id: "current-reader",
    title: "The Completionist",
    desc: "Mau ngejar cerita sampai ke 'Current Run' terbaru.",
    icon: "üìÖ",
    color: "#457B9D",
    link: "/path/modern-runs"
  },
  {
    id: "character-lover",
    title: "Character Buff",
    desc: "Punya hero favorit dan cuma mau cari cerita terbaik mereka.",
    icon: "ü¶∏‚Äç‚ôÇÔ∏è",
    color: "#F1FAEE", // Card text will be dark
    link: "/pathfinder"
  },
  {
    id: "event-chaser",
    title: "Event Chaser",
    desc: "Mau tau soal perang besar (Crossover/Events) di semesta komik.",
    icon: "üí•",
    color: "#A8DADC",
    link: "/path/events"
  }
];
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{siteName} | Navigation</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&display=swap" rel="stylesheet">
</head>
<body>

    <main class="main-wrapper">
        <header class="header">
            <div class="logo">üß≠ {siteName}</div>
            <h1>How do you want to <span class="gradient-text">start your journey?</span></h1>
            <p>Pilih kategori yang paling sesuai sama kondisi lo sekarang.</p>
        </header>

        <section class="persona-grid">
            {personas.map(p => (
                <a href={p.link} class="persona-card" style={`--accent: ${p.color}`}>
                    <div class="icon-circle">{p.icon}</div>
                    <div class="card-content">
                        <h3>{p.title}</h3>
                        <p>{p.desc}</p>
                    </div>
